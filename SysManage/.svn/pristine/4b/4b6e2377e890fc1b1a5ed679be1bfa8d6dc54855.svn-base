var grid;
var managerform;
var managerdiv;

$(function() {
	// grid
	grid = $("#grid").datagrid({
		url : "book/grid.do",
		title : "",// 如果不写或者为空则不绘制标题
		iconCls : "icon-save",// 图标
		pagination : true,// 是否显示分页
		pageSize : 10,// 每页记录数
		pageList : [ 10, 20, 30 ],
		fit : true,// 让grid的宽和高自适应
		fitColumns : false,// 让grid的每个列自适应宽度，如果设为false则每列的宽度固定，如果grid的总宽度比所有列的宽度之和小则会出现水平滚动条
		nowrap : true,// 默认是true表示不允许换行，为false表示允许换行
		border : false,// 是否显示边框
		idField : "id",// 主键字段
		sortName : "name",// 默认排序
		sortOrder : "desc",
		rownumbers : true,// 显示行号列
		singleSelect : true,// 行选择是否只选择一行
		checkOnSelect : false,
		selectOnCheck : false,
		columns : [ [ {
			field : "ck",
			checkbox : true
		}, {
			field : "id",
			hidden : true
		}, {
			title : "名称",
			field : "name",
			width : 200,
			halign : "center",
			sortable : true
		}, {
			title : "编码",
			field : "code",
			width : 120,
			halign : "center",
			sortable : true
		}, {
			title : "型号",
			field : "model",
			width : 120,
			halign : "center",
			sortable : true
		}, {
			title : "重量(克)",
			field : "weight",
			width : 80,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatNumOrFloat
		}, {
			title : "基础价",
			field : "baseprice",
			width : 80,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatNumOrFloat
		}, {
			title : "市场价",
			field : "marketprice",
			width : 80,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatNumOrFloat
		}, {
			title : "销售价",
			field : "sellprice",
			width : 80,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatNumOrFloat
		}, {
			title : "销售数量",
			field : "sellcount",
			width : 80,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatNumOrFloat
		}, {
			title : "点击率",
			field : "clickcount",
			width : 80,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatNumOrFloat
		}, {
			title : "描述",
			field : "description",
			width : 200,
			halign : "center",
			sortable : true
		} ] ],
		toolbar : [ {
			text : "添加",
			iconCls : "icon-add",
			handler : add
		}, "-", {
			text : "修改",
			iconCls : "icon-edit",
			handler : edit
		}, "-", {
			text : "删除",
			iconCls : "icon-remove",
			handler : remove
		}, "-" ]
	});

	// form表单
	managerform = $("#managerform").form();

	// 添加修改div
	managerdiv = $("#managerdiv").show().dialog({
		width : 500,
		height : 550,
		closed : true,
		modal : true
	});

	// 查询按钮
	$("#searchbtn").bind("click", function() {
		grid.datagrid("load", {
			queryjson : $("#search_form").serializeJson()
		});
	});
});

// 数字列格式化
function formatNumOrFloat(value, row, index) {
	if (value > 0)
		return value;
	else
		return "-";
}

var actionUrl;// form的url
var managertype;// 添加or修改

// 添加
function add() {
	managerform.form("clear");
	managerdiv.dialog("setTitle", "添加类别").dialog("open");
	actionUrl = "book/add.do";
	managertype = "add";
}

// 修改
function edit() {
	var rows = grid.datagrid('getSelections');
	if (rows && rows.length == 1) {
		$.ajax({
			url : "book/editload/" + rows[0].id + ".do",
			success : function(data) {
				managerform.form("clear");
				managerform.form('load', data);
				managerdiv.dialog("setTitle", "修改类别").dialog("open");
				actionUrl = "book/edit.do";
				managertype = "edit";
			}
		});
	} else {
		$.messager.alert('提示', "请选择一条记录！");
	}
}

// 删除
function remove() {
	var rows = grid.datagrid('getChecked');
	if (rows && rows.length > 0) {
		var ids = [];
		for ( var i = 0; i < rows.length; i++) {
			ids.push(rows[i].id);
		}
		$.ajax({
			url : "product/typemanager_delete?deleteids=" + ids.join(","),
			success : function(data) {
				data = eval("(" + data + ")");
				if (data && data.success) {
					if (data.message && data.message != "")
						$.messager.alert('提示', data.message);
					else {
						$.messager.alert('提示', "删除成功");
					}
					grid.datagrid('reload');
				} else {
					$.messager.alert('错误', data.message);
				}
			}
		});
	} else {
		$.messager.alert('提示', "请选择需要删除的记录！");
	}
}

// 保存
function save() {
	managerform.form('submit', {
		url : actionUrl,
		onSubmit : function() {
			return managerform.form('validate');
		},
		success : function(data) {
			var m = eval("(" + data + ")");
			if (m && m.success) {
				if (m.msg && m.msg != "")
					$.messager.alert('提示', m.msg);
				else {
					if (managertype == "add")
						$.messager.alert('提示', "添加成功");
					else
						$.messager.alert('提示', "修改成功");
				}
				managerdiv.dialog('close');
				grid.datagrid('reload');
			} else {
				$.messager.alert('错误', m.msg);
			}
		}
	});
}

// 取消
function cancel() {
	managerdiv.dialog('close');
}
