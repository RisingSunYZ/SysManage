var grid;
var codecombox;
var modelcomtree;
var sortL="name";
var orderL="asc";
$(function() {
	// grid
	grid = $("#grid").datagrid({
		url : "book/grid.do",
		title : "",// 如果不写或者为空则不绘制标题
		iconCls : "icon-save",// 图标
		pagination : true,// 是否显示分页
		pageSize : 10,// 每页记录数
		pageList : [ 10, 20, 30 ],
		fit : true,// 让grid的宽和高自适应
		fitColumns : false,// 让grid的每个列自适应宽度，如果设为false则每列的宽度固定，如果grid的总宽度比所有列的宽度之和小则会出现水平滚动条
		nowrap : true,// 默认是true表示不允许换行，为false表示允许换行
		border : false,// 是否显示边框
		idField : "id",// 主键字段
		sortName : "name",// 默认排序
		sortOrder : "asc",
		rownumbers : true,// 显示行号列
		singleSelect : true,// 行选择是否只选择一行
		checkOnSelect : false,
		selectOnCheck : false,
		frozenColumns : [ [ {
			field : "ck",
			checkbox : true
		}, {
			field : "id",
			hidden : true
		}, {
			title : "名称",
			field : "name",
			width : 250,
			halign : "center",
			sortable : true,
			styler : function(value, rowData, rowIndex) {
				if (rowIndex > 4) {
					// return "background:gray";
				}
				return '';
			},
		} ] ],
		columns : [ [ {
			title : "编码",
			field : "code",
			width : 80,
			halign : "center",
			sortable : true
		}, {
			title : "型号",
			field : "model",
			width : 80,
			halign : "center",
			sortable : true
		}, {
			title : "基础价",
			field : "baseprice",
			width : 60,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatNumOrFloat
		}, {
			title : "市场价",
			field : "marketprice",
			width : 60,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatNumOrFloat
		}, {
			title : "销售价",
			field : "sellprice",
			width : 60,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatNumOrFloat
		}, {
			title : "销售数量",
			field : "sellcount",
			width : 60,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatNumOrFloat
		}, {
			title : "创建时间",
			field : "createdate",
			width : 150,
			halign : "center",
			align : "center",
			sortable : true,
			formatter : formatDate
		}, {
			title : "描述",
			field : "description",
			width : 500,
			halign : "center",
			sortable : true
		} ] ],
		toolbar : [ {
			text : "添加",
			iconCls : "icon-add",
			handler : add
		}, "-", {
			text : "修改",
			iconCls : "icon-edit",
			handler : edit
		}, "-", {
			text : "删除",
			iconCls : "icon-remove",
			handler : remove
		}, "-", {
			text : "test",
			iconCls : "icon-remove",
			handler : test
		}, "-", {
			text : "test2",
			iconCls : "icon-remove",
			handler : test2
		}, "-", {
			text : "导出Excel",
			iconCls : "icon-pring",
			handler : download
		} ],
		rowStyler : function(rowIndex, rowData) {
			if (rowIndex > 4) {
				// return "background:gray";
			}
			return '';
		},
		onDblClickRow : function(rowIndex, rowData) {
			if (rowIndex > -1) {
				show(rowData.id);
			}
		},
		onSortColumn:function(sort,order){
			sortL=sort;
			orderL=order
		}
	});

	// 编号下拉框
	codecombox = $("#code").combobox({
		url : 'book/codecmb.do',
		valueField : 'code',
		textField : 'text'
	});

	// 类型下拉框书
	modelcomtree = $('#model').combotree({
		url : 'book/modelcmb.do',
		checkbox : false,
		multiple : false,
		onBeforeSelect : function(node) {
			if (!$(this).tree('isLeaf', node.target)) {
				return false;
			}
		},
		onClick : function(node) {
			if (!$(this).tree('isLeaf', node.target)) {
				$("#model").combo('showPanel');
			}
		}
	});

	// 查询按钮
	$("#searchbtn").bind("click", function() {
		if ($("#search_form").form('validate')) {
			grid.datagrid("load", {
				queryjson : $.serializeJson($("#search_form"))
			});
		}
	});
	// 清空查询按钮
	$("#cleanbtn").bind("click", function() {
		$("#search_form").form("clear");
		grid.datagrid("load", {
			queryjson : ""
		});
	});
});

// 数字列格式化
function formatNumOrFloat(value, row, index) {
	if (value > 0)
		return value;
	else
		return "-";
}

// 时间列格式化
function formatDate(value, row, index) {
	return new Date(value).format("yyyy-MM-dd");
}

// 添加
function add() {
	parent.$.modalDialog({
		title : '添加资源',
		width : 600,
		height : 500,
		href : 'book/forwardAdd.do',
		buttons : [ {
			text : '添加',
			handler : function() {
				parent.$.modalDialog.openner_grid = grid;
				var f = parent.$.modalDialog.handler.find('#form');
				f.submit();
			}
		}, {
			text : '取消',
			handler : function() {
				parent.$.modalDialog.handler.dialog('close');
			}
		} ]
	});
}

// 修改
function edit() {
	var rows = grid.datagrid('getSelections');
	if (rows && rows.length == 1) {
		parent.$.modalDialog({
			title : '修改资源',
			width : 600,
			height : 500,
			href : 'book/forwardEdit/' + rows[0].id + '.do',
			buttons : [ {
				text : '修改',
				handler : function() {
					parent.$.modalDialog.openner_grid = grid;
					var f = parent.$.modalDialog.handler.find('#form');
					f.submit();
				}
			}, {
				text : '取消',
				handler : function() {
					parent.$.modalDialog.handler.dialog('close');
				}
			} ]
		});
	} else {
		parent.$.messager.alert('提示', "请选择一条记录！");
	}
}

// 查看
function show(id) {
	if (id > 0) {
		parent.$.modalDialog({
			title : '查看资源',
			width : 600,
			height : 500,
			href : 'book/forwardShow/' + id + '.do',
			buttons : [ {
				text : '关闭',
				handler : function() {
					parent.$.modalDialog.handler.dialog('close');
				}
			} ]
		});
	}
}

// 上传页面
function test() {
	parent.$.modalDialog({
		title : '上传文件',
		width : 600,
		height : 500,
		href : 'book/forwardupload.do'
	});
}

// 上传页面
function test2() {
	parent.$.modalDialog({
		title : '上传文件',
		width : 600,
		height : 500,
		href : 'book/forwardupload2.do'
	});
}

//下载页面
function download(){
	window.location.href="book/down2003.do?sort='"+sortL+"'&order='"+orderL+"'";
	//console.info(grid.datagrid("options").queryParams);
}

// 删除
function remove() {
	var rows = grid.datagrid('getChecked');
	if (rows && rows.length > 0) {
		parent.$.messager.confirm('提示', '是否删除这些图书?', function(r) {
			if (r) {
				var ids = [];
				for ( var i = 0; i < rows.length; i++) {
					ids.push(rows[i].id);
				}
				$.ajax({
					url : "book/delete/" + ids.join(",") + ".do",
					dataType : "json",
					success : function(data) {
						if (data && data.success) {
							if (data.msg && data.msg != "")
								parent.$.messager.alert('提示', data.msg);
							else
								parent.$.messager.alert('提示', "删除成功");
							grid.datagrid('reload');
							grid.datagrid('uncheckAll');// 把选择的checked记录全部清空
						} else {
							parent.$.messager.alert('错误', data.msg);
						}
					}
				});
			}
		});
	} else {
		parent.$.messager.alert('提示', "请选择需要删除的记录！");
	}
}